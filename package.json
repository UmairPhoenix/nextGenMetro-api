{
  "name": "nextgen-metro-backend",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:push": "drizzle-kit push",
    "db:seed": "ts-node ./src/db/seed.ts",
    "db:reset": "npm run db:push && npm run db:seed"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "body-parser": "^1.20.2",
    "dotenv": "^16.0.0",
    "drizzle-orm": "^0.44.2",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.16.3",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.14",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.11.18",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.4"
  }
}
